function phone(color, brandName, storage, simCard, camera) {
    this.color = color;
    this.brandName = brandName;
    this.storage = storage;
    this.simCard = simCard;
    this.camera = camera;
    
}

let ipad1 = new ipad("sieraBlue", "iphone13", "64gb", "singleSim", "12px")
let ipad2  = new ipad("purple", "s10", "128gb", "dualsim", "16px")
let ipad3  = new ipas("White", "vivoX70", "256gb", "dualsim", "40px")

console.log(ipad1,ipad2,ipad3);


//5

function shoe(color, brandName, size, type, texture) {
    this.color = color;
    this.brandName = brandName;
    this.size = size;
    this.type = type;
    this.texture = texture;
    
}

let boot1 = new shoe("black", "catapilar", "twelve", "sandals", "swede")
let boot2 = new shoe("brown", "timberLand", "seven", "hightops", "leather")
let boot3  = new shoe("blue", "gucci", "eight", "gentle ", "cloth")

console.log(boot1,boot2,boot3);
