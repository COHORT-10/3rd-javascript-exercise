function car(color, brandName, engineOil, capacity) {
    this.color = color;
    this.brandName = brandName;
    this.engineOil = engineOil
    this.capacity = capacity;
    
    this.sound = function () {
        return "the car honcks"
    };
    
}

let car1 = new car("Green", "Toyota", "Synthetic", "Manual", "50-seater")
let car2  = new car("Blue", "Actros", "SemiSynthetic", "Manual", "4-seater")

console.log(car1);
console.log(car2);

console.log(car1.sound());

