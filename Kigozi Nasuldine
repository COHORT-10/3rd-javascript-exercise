//defining a class called 
//and expects those values in the brackets are parameters
function computer(color, brandName, storage, ram, ) {
//this keyword is used to create the properties of the class
    this.color = color;
    this.brandName = brandName;
    this.storage = storage;
    this.screen = ram;
  
}
// the new word is a constructor 
// a constructor is used to initialize objects 
//key problem is function anonymus
// why not car 1 instead of car some applies for all classes as per now
let computer1 = new computer("black", "dell", "200gb", "4gb", "1050ti")
let computer2 = new computer("white", "lenovo", "512gb", "8gb", "1060ti")

console.log(computer1);
console.log(computer2);
console.log(computer3);

//3
function team(teamName, stadium, country, league) {
   
    this.teamName = teamName;
    this.stadium = stadium;
    this.country = country;
    this.league = league;

    };
    
let team1 = new team("red", "lakers", "la", "Chicago ", "nba")
let team2  = new team("white", "celtics", "boston", "cb")
let team3  = new team("green ", "dodgers", "California ", "lasvegas", "cbn")


console.log(team1,team2,team3);

